<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_btn_paired_description"
        android:text="@string/text_view_paired_description"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/text_view_device_information_title" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_connect_paired"
        android:id="@+id/button_paired"
        android:layout_below="@+id/text_view_btn_paired_description"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_btn_discover_description"
        android:text="@string/text_view_discover_description"
        android:layout_below="@+id/button_paired"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_discover"
        android:id="@+id/button_discover"
        android:layout_below="@+id/text_view_btn_discover_description"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_device_information_title"
        android:text="@string/device_information_title"
        android:layout_above="@+id/text_view_device_information_mac"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_device_information_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/button_confirmation"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_device_information_mac"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/text_view_device_information_name"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_bt_confirm"
        android:id="@+id/button_confirmation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_bt_off_usage"
        android:text="Let me use this app without remote device"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />






</RelativeLayout>
