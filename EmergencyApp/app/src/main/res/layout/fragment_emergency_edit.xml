<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kolodziejczyk.olek.inzynierka.emergencyapp.EmergencyEditFragment"
    android:background="@color/Custom3">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view_edit1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:layout_marginBottom="5dp"
        android:background="@color/Custom4">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter title here"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/edit_text_edit_title"/>
    </ScrollView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll_view_edit1"
        android:hint="Enter phone number"
        android:background="@color/Custom4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingStart="10dp"
        android:paddingBottom="2dp"
        android:layout_marginBottom="5dp"
        android:paddingEnd="15dp"
        android:id="@+id/edit_text_edit_number"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_text_edit_number"
        android:id="@+id/scroll_view_edit2"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:background="@color/Custom4"
        android:layout_above="@+id/button_save">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_edit_message"
            android:hint="Message"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_save"
        android:text="@string/button_save"/>




</RelativeLayout>
